{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "target": "ES2019",
    "module": "es2015",
    "strict": true,
    "jsx": "react",
    "typeRoots": [ "node_modules/@types", "./typings.d.ts" ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
